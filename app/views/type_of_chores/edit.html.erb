<div class="page-header">
  <h1>Editing Type Of Chore #<%= @type_of_chore.id %></h1>
</div>

<%= form_tag(type_of_chore_url(@type_of_chore), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, @type_of_chore.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Type Of Chore", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
