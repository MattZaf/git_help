<div class="page-header">
  <h1>Type of chores</h1>
</div>

<p><%= link_to 'Add a New Type Of Chore', new_type_of_chore_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @type_of_chores.each do |type_of_chore| %>
      <tr>
        <td><%= type_of_chore.name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, type_of_chore_url(type_of_chore), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_type_of_chore_url(type_of_chore), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, type_of_chore_url(type_of_chore), method: 'delete', data: { confirm: "Do you really want to delete this type_of_chore?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

