<div class="page-header">
  <h1>New Chore</h1>
</div>

<%= form_tag(chores_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :task_haver_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :task_haver_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :student_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :student_id, nil, class: 'form-control' %>
    </div>
  </div>

<div class="form-group">



<%= select_tag("type_of_chore_id", options_from_collection_for_select(TypeOfChore.all, :id, "name")) %>


  </div>
 <div>

  <div class="form-group">
    <%= label_tag :description_of_chore, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :description_of_chore, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :review_of_student, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :review_of_student, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :review_of_task_haver, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :review_of_task_haver, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :ask_price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :ask_price, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :price, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :complete_by, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :complete_by, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :active, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :active %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Chore", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
