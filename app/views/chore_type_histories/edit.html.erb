<div class="page-header">
  <h1>Editing Chore Type History #<%= @chore_type_history.id %></h1>
</div>

<%= form_tag(chore_type_history_url(@chore_type_history), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :student, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :student, @chore_type_history.student, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :type_of_chore, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :type_of_chore, @chore_type_history.type_of_chore, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Chore Type History", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
