<div class="page-header">
  <h1>New Chore Type History</h1>
</div>

<%= form_tag(chore_type_histories_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :student, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :student, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :type_of_chore, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :type_of_chore, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Chore Type History", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
